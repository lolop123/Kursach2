@model Kursach.Models.Filter.FilterModel
@{
    //Layout = "_Layout";
}

<div class="container-fluid mt-2">
   
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">Company List</h2>
            
            <form asp-action="DisplayCompanies">
                <div class="row">
                    <div class="col-md-4">
                        <label>Company name</label>
                        <input name="CompanyName" type="text" asp-for="CompanyName" class="form-control" placeholder="search"/>
                    </div>
                    <div class="col-md-4">
                        <label>Country</label>
                        @Html.DropDownListFor(model => model.CountryName, new SelectList(ViewBag.Countries), new { @class = "form-control"}) 
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-secondary">search</button>
                    </div>
                   
                </div>
            </form>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Country</th>
                        <th>Field</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in ViewBag.Companies)
                    {
                        <tr>
                            <td>@company.Name</td>
                            <td>@company.Description</td>
                            <td>@company.Country</td>
                            <td>@company.Field</td>
                            <td>
                                <a class="btn btn-secondary" href="/Company/EditCompany?id=@company.Id">Edit</a>
                                <a class="btn btn-secondary" href="/Company/DeleteCompany?id=@company.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Company/AddCompany" class="btn btn-secondary mb-3">Add a Company</a>

        </div>
    </div>
</div>
