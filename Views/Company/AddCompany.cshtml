@model Kursach.Models.Domain.Company
@{
    //Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="p-4 bg-light shadow" style="max-width: 400px; width: 100%;">
        <form asp-action="AddCompany">
            <h2 class="text-center mb-4">Add Company</h2>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Country" class="form-label">Country</label>
                <input asp-for="Country" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Country"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Field" class="form-label">Field</label>
                <input asp-for="Field" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Field"></span>
            </div>
            @if (TempData["msg"] != null)
            {
                <div class="mb-3">
                    @TempData["msg"]
                </div>
            }
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-secondary">Submit</button>
                <a href="/Company/DisplayCompanies" class="btn btn-secondary">All Companies</a>
            </div>
        </form>
    </div>
</div>
